<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <embeddable name="Ekklesion\People\Domain\Model\Membership">
        <field name="isMember" type="boolean"/>
        <field name="becameMemberAt" type="chronos" nullable="true"/>
        <field name="isDeacon" type="boolean"/>
        <field name="becameDeaconAt" type="chronos" nullable="true"/>
        <field name="isElder" type="boolean"/>
        <field name="becameElderAt" type="chronos" nullable="true"/>
    </embeddable>

</doctrine-mapping>