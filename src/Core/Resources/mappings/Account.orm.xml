<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Ekklesion\Core\Domain\Model\Account" repository-class="Ekklesion\Core\Infrastructure\Repository\DoctrineAccountRepository">

        <id name="uuid" type="uuid" column="uuid"/>
        <embedded name="username" class="Ekklesion\Core\Domain\Model\Username" column-prefix="username_"/>
        <embedded name="password" class="Ekklesion\Core\Domain\Model\ArgonHashedPassword" column-prefix="password_"/>
        <embedded name="actionToken" class="Ekklesion\Core\Domain\Model\ActionToken" column-prefix="token_"/>
        <field name="lastLogin" type="chronos" nullable="true"/>
        <field name="createdAt" type="chronos"/>

    </entity>

</doctrine-mapping>