{% extends '@core/base.html.twig' %}

{% block title %}{% trans 'New Password' %}{% endblock %}

{% block body %}
    <body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#">{{ context.settings.churchHtmlLongText|raw }}</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">{% trans 'Select a new password' %}</p>

            {% if flash('error') %}
                <div class="text-center alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    <h4><i class="icon fa fa-ban"></i> {% trans 'Error!' %}</h4>
                    {% for msg in flash('error') %}
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}

            <form action="/auth/reset-password/{{ id }}" method="post">
                <div class="form-group has-feedback">
                    <input required name="passwordOne" type="password" class="form-control" placeholder="{% trans 'Password' %}">
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input required name="passwordTwo" type="password" class="form-control" placeholder="{% trans 'Confirm New Password' %}">
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>
                <input type="hidden" name="token" value="{{ token }}">
                <button type="submit" class="btn btn-danger btn-block btn-flat">{% trans 'Change' %}</button>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
    </body>
{% endblock %}