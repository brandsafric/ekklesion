<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="IglesiaUNO\People\Domain\Model\Person" repository-class="IglesiaUNO\People\Infrastructure\Repository\DoctrinePersonRepository">

        <id name="uuid" type="uuid"/>
        <embedded name="name" class="IglesiaUNO\People\Domain\Model\Name" column-prefix="name_"/>
        <field name="avatar" nullable="true"/>
        <embedded name="role" class="IglesiaUNO\People\Domain\Model\PersonRole" column-prefix="role_"/>
        <field name="accountId" type="uuid" nullable="true"/>
        <field name="firstVisit" type="chronos" nullable="true"/>
        <field name="baptizedAt" type="chronos" nullable="true"/>
        <field name="addedAt" type="chronos"/>

    </entity>

</doctrine-mapping>